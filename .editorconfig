# 顶层 EditorConfig 文件
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript 和 JSON 文件
[*.{js,json,mjs}]
indent_style = space
indent_size = 2

# TypeScript 文件
[*.ts,*.tsx]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# YAML 文件
[*.yml,*.yaml]
indent_style = space
indent_size = 2